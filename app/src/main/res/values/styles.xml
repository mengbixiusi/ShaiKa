<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--顶部导航颜色-->
        <item name="colorPrimaryDark">@color/topcolor</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--顶部导航颜色-->
        <item name="colorPrimaryDark">@color/topcolor</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>


    <style name="Navigation">
        <item name="android:minWidth">50dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="search_view">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="android:background">@drawable/selector_search_view</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">4dp</item>

        <item name="android:singleLine">true</item>
    </style>

    <style name="feedback_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableLeft">@drawable/radiobutton_style</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radiobutton_style</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:height">20dp</item>
    </style>

    <style name="list_top">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_tab_raddiobutton_text</item>
        <item name="android:drawablePadding">-50dp</item>
        <item name="android:drawableRight">@drawable/selector_tab_raddiobutton_list</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">25dp</item>
    </style>

</resources>
