<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="108px"
    android:orientation="horizontal"
    android:background="@drawable/home_white_bg"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="12px"
        android:src="@mipmap/missyou"
        />

    <TextView
        android:id="@+id/tv_categray"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="28px"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:layout_marginRight="12px"
        android:text="乔丹共享了500元" />

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="68px"
        android:layout_height="28px"
        android:layout_marginLeft="12px"
        android:textColor="#0f84c7"
        android:text="8折"
        android:gravity="center"
        android:background="@drawable/shaika_discount_bg"
        />
    <Button
        android:layout_width="140px"
        android:layout_height="48px"
        android:text="优惠买单"
        android:textColor="#ffffff"
        android:layout_marginLeft="68px"
        android:gravity="center"
        android:focusable="false"
        android:background="@drawable/shaika_youhuibuy"
        />

</LinearLayout>