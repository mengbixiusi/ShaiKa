<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_title_forget_psw"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="重置密码"
            android:textColor="@color/usercentertextcolor"
            android:textSize="20dp" />

        <ImageButton
            android:background="@color/black_btn_color_normal"
            android:id="@+id/title_iv_back"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/back_black" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="@color/bg_gary" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/usercentertextcolor"
            android:layout_marginLeft="20px"
            android:textSize="36px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户：" />

        <com.xhhf.shaika.view.ClearEditText
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:id="@+id/ac_forget_psw1_et_user_pnone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125px"
            android:background="@color/white"
            android:hint="@string/phonenumber"
            android:inputType="phone" />
    </RelativeLayout>

    <Button
        android:id="@+id/ac_forget_psw1_btn_next"
        android:textColor="@color/white"
        android:layout_marginTop="50px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/shape_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"/>

