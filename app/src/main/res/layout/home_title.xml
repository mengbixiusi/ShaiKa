<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68px"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#ef6d21"
    >

    <ImageButton
        android:id="@+id/fragment_home_location"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="88px"
        android:src="@mipmap/location"
        android:layout_marginLeft="24px"
        />

    <RelativeLayout
        android:layout_marginLeft="40px"
        android:layout_width="0dp"
        android:layout_height="46px"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@mipmap/serch"
        android:id="@+id/rl_search">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search"
            android:id="@+id/iv_search"
            />
        <TextView
            android:layout_marginLeft="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索商家、品牌"
            android:textSize="28px"
            android:textColor="#666666"
            android:layout_toRightOf="@+id/iv_search"
            />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/ib_home_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/scanner2"
        android:background="#00000000"
        android:layout_marginLeft="72px"
        />
    <ImageButton
        android:id="@+id/ib_home_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/noti"
        android:background="#00000000"
        android:layout_marginLeft="24px"
        android:layout_marginRight="40px"
        />

</LinearLayout>