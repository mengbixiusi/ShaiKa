<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340px"
            android:background="#FF8000">

            <ImageView
                android:id="@+id/frament_mine_iv_message"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@mipmap/noti" />

            <ImageView
                android:id="@+id/frament_mine_iv_setting"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@mipmap/setting" />

            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/ll_frag_mine_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38px"
                android:clickable="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">  

                    <ImageView
                        android:layout_width="142px"
                        android:layout_height="142px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@mipmap/userphoto_bg"
                        app:layout_auto_basewidth="height" />  
                      

                    <com.xhhf.shaika.view.CircularImage
                        android:id="@+id/fragment_mine_cover_user_photo"
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        app:layout_auto_basewidth="height" />  
                      
                </RelativeLayout>
                  

                <TextView
                    android:id="@+id/fragment_mine_tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="请点击登录"
                    android:textColor="@color/white"
                    android:textSize="30px" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ll_frag_mine_login"
                android:layout_marginTop="36px"
                android:background="@color/bg_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/fragment_mine_rl_membership_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="54px"
                        android:layout_height="40px"
                        android:src="@mipmap/membercard" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/imageView"
                        android:layout_toRightOf="@id/imageView"
                        android:text="会员卡"
                        android:textColor="@color/white"
                        android:textSize="28px" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@color/bg_line" />

                <RelativeLayout
                    android:id="@+id/fragment_mine_rl_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="54px"
                        android:layout_height="40px"
                        android:src="@mipmap/collection" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/imageView2"
                        android:layout_toRightOf="@id/imageView2"
                        android:text="收藏"
                        android:textColor="@color/white"
                        android:textSize="28px" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/bg_gary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="10px"
                android:background="@drawable/shape_mine_frag_scan_corners">

                <LinearLayout
                    android:id="@+id/fragment_mine_ll_scan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2.5dp"
                        android:src="@mipmap/scan" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5px"
                        android:text="@string/scan"
                        android:textSize="28px" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="16px"
                    android:background="@color/bg_line" />

                <LinearLayout
                    android:id="@+id/fragment_mine_ll_scanpay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2.5dp"
                        android:src="@mipmap/scanpay" />

                    <TextView
                        android:id="@+id/fragment_mine_tv_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5px"
                        android:text="@string/scanpay"
                        android:textSize="28px" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_mine_rl_purse"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/purse" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="112px"
                android:layout_marginStart="112px"
                android:layout_marginTop="32px"
                android:gravity="center"
                android:text="@string/purse"
                android:textColor="@color/usercentertextcolor"
                android:textSize="30px" />

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="42px"
                android:layout_marginRight="42px"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_line" />

        <RelativeLayout
            android:id="@+id/fragment_mine_rl_order"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16px"
                android:layout_toLeftOf="@+id/iv_order_right"
                android:layout_toStartOf="@+id/iv_order_right"
                android:text="@string/allorder"
                android:textSize="22px" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="112px"
                android:layout_marginStart="112px"
                android:layout_marginTop="32px"
                android:gravity="center"
                android:text="@string/order"
                android:textColor="@color/usercentertextcolor"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/iv_order_right"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="42px"
                android:layout_marginRight="42px"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:background="@color/bg_gary" />

        <RelativeLayout
            android:id="@+id/fragment_mine_rl_about_us"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/aboutus" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="112px"
                android:layout_marginStart="112px"
                android:layout_marginTop="32px"
                android:gravity="center"
                android:text="@string/aboutus"
                android:textColor="@color/usercentertextcolor"
                android:textSize="30px" />

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="42px"
                android:layout_marginRight="42px"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_line" />

        <RelativeLayout
            android:id="@+id/fragment_mine_rl_service"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/service" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="112px"
                android:layout_marginStart="112px"
                android:layout_marginTop="32px"
                android:gravity="center"
                android:text="@string/contactservice"
                android:textColor="@color/usercentertextcolor"
                android:textSize="30px" />

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="42px"
                android:layout_marginRight="42px"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_line" />

        <RelativeLayout
            android:id="@+id/fragment_mine_rl_comment"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/comment" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="112px"
                android:layout_marginStart="112px"
                android:layout_marginTop="32px"
                android:gravity="center"
                android:text="@string/mycomment"
                android:textColor="@color/usercentertextcolor"
                android:textSize="30px" />

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="42px"
                android:layout_marginRight="42px"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:background="@color/bg_gary" />

        <RelativeLayout
            android:id="@+id/fragment_mine_rl_cooperation"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/cooperation" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="112px"
                android:layout_marginStart="112px"
                android:layout_marginTop="32px"
                android:gravity="center"
                android:text="@string/cooperation"
                android:textColor="@color/usercentertextcolor"
                android:textSize="30px" />

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="42px"
                android:layout_marginRight="42px"
                android:src="@mipmap/right" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>