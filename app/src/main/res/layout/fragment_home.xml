<?xml version="1.0" encoding="utf-8"?>

<com.xhhf.shaika.view.PullableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="280px"
                app:auto_cycle="true"
                app:indicator_visibility="visible"
                app:pager_animation="Accordion"
                app:pager_animation_span="1100" />

        </RelativeLayout>

        <com.xhhf.shaika.view.BaseGridView
            android:id="@+id/gv_icon"
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:layout_marginBottom="16px"
            android:background="@drawable/home_white_bg"
            android:fadingEdge="none"
            android:numColumns="5"
            android:paddingBottom="28px"
            android:paddingTop="28px"
            android:scrollbars="none"
            android:verticalSpacing="40px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:background="@drawable/home_white_bg"
            android:gravity="center"
            android:text="-特惠专区-"
            android:textColor="#0f84c7"
            android:textSize="22px" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="#d5d5d5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="204px"
            android:layout_marginBottom="16px"
            android:background="@drawable/home_icon_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_guess1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_guess2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:background="@drawable/home_white_bg"
            android:gravity="center"
            android:text="-猜你喜欢--"
            android:textColor="#999999"
            android:textSize="22px" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="#d5d5d5" />

        <com.xhhf.shaika.view.BaseListView
            android:id="@+id/lv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_white_bg"
            android:fadingEdge="none"
            android:scrollbars="none" />
    </LinearLayout>
</com.xhhf.shaika.view.PullableScrollView>
