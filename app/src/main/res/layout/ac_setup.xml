<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ac_settup_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100px"
            android:text="设置"
            android:textColor="@color/usercentertextcolor"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/title_iv_back"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:background="#00000000"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/back_black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="@color/bg_gary" />

    <RelativeLayout
        android:id="@+id/ac_setup_rl_userinfo"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="24px"
            android:layout_marginStart="24px"
            android:layout_marginTop="32px"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="@color/usercentertextcolor"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/iv_order_right"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="42px"
            android:layout_marginRight="42px"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_line" />

    <RelativeLayout
        android:id="@+id/ac_setup_rl_account_safe"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="24px"
            android:layout_marginStart="24px"
            android:layout_marginTop="32px"
            android:gravity="center"
            android:text="账户安全"
            android:textColor="@color/usercentertextcolor"
            android:textSize="30px" />

        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="42px"
            android:layout_marginRight="42px"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <Button
        android:id="@+id/ac_setup_exit"
        android:background="@drawable/shape_edge_corners"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="60px"
        android:text="退出账户" />


</LinearLayout>