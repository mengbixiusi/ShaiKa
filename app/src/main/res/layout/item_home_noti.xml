<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/iv_noti_icon"
        android:layout_width="98px"
        android:layout_height="98px"
        android:layout_margin="24px"
        android:src="@mipmap/missyou"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="32px"
        android:layout_marginBottom="24px"
        >
        <TextView
            android:id="@+id/tv_noti_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_marginBottom="20px"
            android:textSize="30px"
            android:text="今日推荐"
            />
        <TextView
            android:id="@+id/tv_noti_categray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="24px"
            android:text="尊敬的用户：已为您定制今天的独享优惠，请勿向其他人泄漏"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_noti_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22px"
        android:textColor="#999999"
        android:text="2016-11-11"
        android:layout_marginRight="24px"
        />

</LinearLayout>