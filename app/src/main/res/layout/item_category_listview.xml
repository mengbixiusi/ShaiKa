<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="8px"
        android:background="@color/bg_line" />

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24px"
        android:orientation="vertical">

        <ImageView
            android:layout_width="228px"
            android:layout_height="208px"
            android:scaleType="fitXY"
            android:src="@mipmap/test_imag_no_use" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40px"
        android:layout_marginRight="24px"
        android:layout_marginTop="24px"
        android:layout_toRightOf="@id/ll_left"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="375px"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="好想你专卖店（兰德中心店）"
            android:textColor="@color/usercentertextcolor"
            android:textSize="30px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center_vertical">

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/item_recylerview_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                app:borderColor="@color/theamcolor"
                app:fillColor="@color/theamcolor"
                app:numberOfStars="5"
                app:rating="3"
                app:starBorderWidth="5"
                app:starSize="24px"
                app:stepSize="0.5" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16px"
                android:layout_toRightOf="@id/item_recylerview_star"
                android:text="月售：226 单"
                android:textColor="@color/defaultTextColor"
                android:textSize="24px" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="64px"
                android:layout_height="28px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/bg_gary"
                android:gravity="center"
                android:padding="2px"
                android:text="50m"
                android:textSize="24px" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10px"
            android:layout_marginTop="17px"
            android:background="@color/bg_line" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19px">

            <TextView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_busi_xiang"
                android:gravity="center"
                android:paddingBottom="2px"
                android:paddingLeft="4px"
                android:paddingRight="4px"
                android:paddingTop="2px"
                android:text="享"
                android:textColor="@color/white"
                android:textSize="22px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12px"
                android:layout_toRightOf="@id/imageView2"
                android:text="充值1000元送500元"
                android:textSize="22px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px">

            <TextView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_busi_xiang"
                android:gravity="center"
                android:paddingBottom="2px"
                android:paddingLeft="4px"
                android:paddingRight="4px"
                android:paddingTop="2px"
                android:src="@mipmap/ic_launcher"
                android:text="享"
                android:textColor="@color/white"
                android:textSize="22px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12px"
                android:layout_toEndOf="@id/imageView3"
                android:layout_toRightOf="@id/imageView3"
                android:text="充值2000元送1000元"
                android:textSize="22px" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>